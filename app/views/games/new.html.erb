<div class="container">
  <h1 class="text-center mt-3">New game</h1>
  <div class="letters d-flex justify-content-around p-3">
    <% @letters.select do |letter| %>
    <h2 class="bg-info px-4 py-2 text-white"><%= letter %></h2>
    <% end %>
  </div>

  <form action="/score" method="post" class="d-flex">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="What is the longest word you can find..." class="form-control">
    <input type="submit" value="Play" class="rounded-right">
  </form>
</div>
